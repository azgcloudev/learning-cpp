{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Linux cpp 12",
			"command": "/usr/bin/cpp",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/build/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group":"build",
			"detail": "compiler: /usr/bin/cpp"
		},
		{
			"type": "cppbuild",
			"label": "Linux g++ 12",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/buid/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"isDefault": true,
				"kind": "build"
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}